<!DOCTYPE html>
<html>
    <head>
        <title>
            Movies HomePage
        </title>
        <%- include('./partials/head.ejs') %> 
    </head>
    <body style="width: 100vw; background-color: #0B0C10; height: 100vh;">


        <div class="d-flex w-100" id="container" style="margin-bottom: 9em">

            <!-- Side Bar -->
            <%- include('./partials/sidebar.ejs') %> 


            <!-- Create movie form -->
            <form class="form-signin mx-auto" style="width: 80%" action="/new" method="POST">
                <div class="text-center my-5">
                  <img class="mb-4" src="https://c8.alamy.com/comp/HY09MH/vintage-letter-m-initial-inside-laurel-wreath-symbol-design-HY09MH.jpg" alt="" width="72" height="72">
                  <h1 class="h3 mb-3 font-weight-normal text-white">Add a Movie!</h1>
                </div>
                
                <div class="form-label-group w-50 mx-auto">

                    <label for="inputTitle" class="text-white">Title</label>
                    <input type="text" id="inputTitle" class="form-control" placeholder="Title of movie..." name="title" required autofocus>

                </div>


                <div class="form-label-group w-50 mx-auto my-3">

                    <label for="inputVote" class="text-white">UpVotes</label>
                    <input type="number" id="inputVote" class="form-control" placeholder="Numbers only" name="vote_average" required >
                </div>
                
                <div class="form-label-group w-50 mx-auto my-3">

                    <label for="inputImage" class="text-white">Movie Image (Not Required)</label>
                    <input type="text" id="inputImage" class="form-control" placeholder="Movie Image" name="poster_path">
                    
                </div>

                <div class="form-label-group w-50 mx-auto my-3">

                    <label for="inputSum" class="text-white">Summary</label>
                    <input type="text" id="inputSum" class="form-control" placeholder="Movie Summary..." name="overview" required>
                    
                </div>
                
          
                <div class="w-50 mx-auto d-flex justify-content-center">
                    <button class="btn btn-lg btn-primary btn-block" type="submit" class="mx-auto">Add Movie</button>
                </div>
              </form>
        </div>


        
        <!-- footer -->
        <%- include('./partials/footer.ejs') %> 
    </body>
</html>