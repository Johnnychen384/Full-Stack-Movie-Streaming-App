<!DOCTYPE html>
<html>
    <head>
        <title>
            Movies HomePage
        </title>
        <%- include('./partials/head.ejs') %> 
    </head>
    <body style="width: 100vw; background-color: #0B0C10; height: 100vh;">


        <div class="d-flex w-100" id="container" style="margin-bottom: 9em">

            <!-- Side Bar -->
            <nav class="navbar navbar-expand-lg navbar-light p-3 mt-4 rounded fixed-top text-white" style="width: 8%; height: 95vh; background-color: #0f1217; margin-left: 2em;" id="nav">
                <div class="d-flex flex-column justify-content-center align-items-start text-white w-100">
                    <div class="container-fluid w-100" id="navstuff">
                        <!-- <a class="navbar-brand text-white" href="#">Movies</a> -->
                        <button class="navbar-toggler text-white" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation" id="hamBtn">
                            <span class="navbar-toggler-icon bg-light rounded border border-white"></span>
                        </button>
            
                        <div class="collapse navbar-collapse" id="navbarNav">
                            <ul class="navbar-nav d-flex flex-column justify-content-center align-items-center text-white w-100">
                                <li class="nav-item" id="movielogo">
                                    <a class="nav-link text-white" href="#" style="font-size: 1.2em;">Movies</a>
                                </li>
                                <hr style="width: 100%">
                                <li class="nav-item mb-3" id="home">
                                    <a class="nav-link text-white" href="/">
                                        <i class="fas fa-home" style="font-size: 1.6em;"></i>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-white d-flex justify-content-center" href="#">
                                        <i class="fas fa-plus-square d-flex justify-content-center" style="font-size: 1.6em;"></i>
                                    </a>
                                </li>
                    
                            </ul>
                        </div>
                    </div>
                </div>
                
            </nav>


            <!-- Create movie form -->
            <form class="form-signin mx-auto" style="width: 80%" action="/new" method="POST">
                <div class="text-center my-5">
                  <img class="mb-4" src="https://getbootstrap.com/docs/4.0/assets/brand/bootstrap-solid.svg" alt="" width="72" height="72">
                  <h1 class="h3 mb-3 font-weight-normal text-white">Add a Movie!</h1>
                </div>
                
                <div class="form-label-group w-50 mx-auto">

                    <label for="inputTitle" class="text-white">Title</label>
                    <input type="text" id="inputTitle" class="form-control" placeholder="Title of movie..." name="title" required autofocus>

                </div>


                <div class="form-label-group w-50 mx-auto my-3">

                    <label for="inputVote" class="text-white">UpVotes</label>
                    <input type="number" id="inputVote" class="form-control" placeholder="Numbers only" name="vote_average" required >
                </div>
                
                <div class="form-label-group w-50 mx-auto my-3">

                    <label for="inputImage" class="text-white">Movie Image (Not Required)</label>
                    <input type="text" id="inputImage" class="form-control" placeholder="Movie Image" name="poster_path">
                    
                </div>

                <div class="form-label-group w-50 mx-auto my-3">

                    <label for="inputSum" class="text-white">Summary</label>
                    <input type="text" id="inputSum" class="form-control" placeholder="Movie Summary..." name="overview" required>
                    
                </div>
                
          
                <div class="w-50 mx-auto d-flex justify-content-center">
                    <button class="btn btn-lg btn-primary btn-block" type="submit" class="mx-auto">Add Movie</button>
                </div>
              </form>
        </div>


        
        <!-- footer -->
        <%- include('./partials/footer.ejs') %> 
    </body>
</html>