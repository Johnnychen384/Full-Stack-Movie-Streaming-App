<!DOCTYPE html>
<html>
    <head>
        <title>
            Movies HomePage
        </title>
        <%- include('./partials/head.ejs') %> 
    </head>
    <body style="width: 100vw; background-color: #0B0C10; height: 100vh;">


        <div class="d-flex w-100" id="container" style="margin-bottom: 9em">

            <!-- Side Bar -->
            <%- include('./partials/sidebar.ejs') %> 


            <!-- Create movie form -->
            <form class="form-signin mx-auto" style="width: 80%" action="/edit/<%= url %>/<%= movie._id %>?_method=PUT" method="POST">
                <div class="text-center my-5">
                    <img class="mb-4" src="https://getbootstrap.com/docs/4.0/assets/brand/bootstrap-solid.svg" alt="" width="72" height="72">
                    <h1 class="h3 mb-3 font-weight-normal text-white">Edit This Movie!</h1>
                </div>
                
                <div class="form-label-group w-50 mx-auto">

                    <label for="inputTitle" class="text-white">Edit Title</label>
                    <input type="text" id="inputTitle" class="form-control" placeholder="Title of movie..." name="title" value="<%= movie.title %>" autofocus>

                </div>


                <div class="form-label-group w-50 mx-auto my-3">

                    <label for="inputVote" class="text-white">Edit UpVotes</label>
                    <input type="number" id="inputVote" class="form-control" placeholder="Numbers only" name="vote_average" value="<%= movie.vote_average %>">
                </div>
                
                <div class="form-label-group w-50 mx-auto my-3">

                    <label for="inputImage" class="text-white">Edit Movie Image (Not Required)</label>
                    <input type="text" id="inputImage" class="form-control" placeholder="Movie Image" name="poster_path" value="<%= movie.poster_path %>">
                    
                </div>

                <div class="form-label-group w-50 mx-auto my-3">

                    <label for="inputSum" class="text-white">Edit Summary</label>
                    <input type="text" id="inputSum" class="form-control" placeholder="Movie Summary..." name="overview" value="<%= movie.overview %> ">
                    
                </div>
                
          
                <div class="w-50 mx-auto d-flex justify-content-center">
                    <button class="btn btn-lg btn-primary btn-block" type="submit" class="mx-auto">Update</button>
                </div>
              </form>
        </div>


        
        <!-- footer -->
        <%- include('./partials/footer.ejs') %> 
    </body>
</html>